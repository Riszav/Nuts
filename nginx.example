worker_processes 8;

events {
    worker_connections 512;
}

error_log /var/log/nginx-error.log info;
http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;


    upstream config {
        server backend:8000;
    }

    server {

        listen 443 ssl;
        server_name orehi.kg;

        ssl_certificate /etc/letsencrypt/live/orehi.kg/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/orehi.kg/privkey.pem;


        location / {

           alias /usr/src/app/dist/;
           try_files $uri $uri/ /index.html;

        }

        location ~ ^/(api/|admin) {
            proxy_pass http://backend:8000;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $server_name;
            client_max_body_size 128M;
            proxy_redirect off;

            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";

        }

        location /back_static/ {
            root /usr/src/app;
        }

         location /back_media/ {
            root /usr/src/app;
        }

    }


    server {
        if ($host = orehi.kg) {
            return 301 https://$host$request_uri;
        }

        if ($host = www.orehi.kg) {
            return 301 https://$host$request_uri;
        }

        listen 80;
        server_name orehi.kg;
        return 404;
    }

}
